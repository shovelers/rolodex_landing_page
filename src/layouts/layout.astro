---
import { SEO } from "astro-seo";
import Navbar from "../components/navbar.astro"
import Footer from "../components/footer.astro"
import '@fontsource-variable/montserrat';

interface Props {
	title: string;
}

//const canonicalURL = new URL(Astro.url.pathname, Astro.site);

//const resolvedImageWithDomain = new URL(
//  "/Rolodex_screen.png",
//  Astro.url
//);

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Rolo/dex"
  : "Local-first Personal Relationship Manager";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-H9K0YV6H99"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-H9K0YV6H99');
    </script>
    <SEO
      title={makeTitle}
      description="Local-first Personal Relationship Manager"
      canonical={"https://rolodex.shovel.company"}
      openGraph={{
        basic: {
        url: "https://rolodex.shovel.company",
          type: "website",
          title: `Rolodex`,
          image: "https://rolodex.shovel.company/Rolodex_screen.png",
        },
        image: {
          alt: "Rolodex Homepage Screenshot",
        },
      }}
    />
	</head>
  <body class="antialiased flex flex-col justify-between min-h-screen">
    <Navbar />
		<slot />
    <Footer />
	</body>
</html>
